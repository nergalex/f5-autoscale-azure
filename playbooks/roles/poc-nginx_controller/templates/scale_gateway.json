{
  "metadata": {
    "name": "gw_{{item.name| lower}}",
    "displayName": "Gateways {{item.name | lower}}",
    "description": "Generated by CMP"
  },
  "desiredState": {
    "ingress": {
      {%- if var_tls_enabled is defined and var_tls_enabled -%}
      "tls": {
        "certRef": {
          "ref": "/services/environments/{{ extra_env_prefix | lower }}{{ item.environment | lower }}/certs/crt_{{ item.name | lower }}"
        }
      },
      {%- endif -%}
      "uris": {
      {%- if var_tls_enabled is defined and var_tls_enabled %}
        "https://{{item.name | lower}}.{{item.domain | lower}}": {
      {%- else %}
        "http://{{item.name | lower}}.{{item.domain | lower}}": {
      {%- endif %}
          "matchMethod": "EXACT"
        }
      },
      "placement": {
        "instanceRefs": [
          {%- for gw in var_instance_ids -%}
          {
            "ref": "{{ gw.ref }}"
          }{%- if not loop.last -%},{% endif %}
          {%- endfor -%}
        ]
      }
    }
  }
}
